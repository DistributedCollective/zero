{
  "name": "@sovryn-zero/contracts",
  "version": "1.0.0-early.access.2",
  "description": "Sovryn Zero solidity contracts",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "private": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "do-pack": "yarn prepare && yarn docgen && yarn dist-pack",
    "do-publish": "yarn prepare && yarn publish-dist",
    "publish-dist": "cd ./dist && yarn publish -f",
    "hardhat": "hardhat",
    "docgen": "truffle compile && solidoc2 ./ ./docs",
    "prepare": "run-s prepare:*",
    "prepare:compile": "hardhat compile",
    "prepare:set-version": "node scripts/set-version.js",
    "prepare:dist": "yarn prepare-dist",
    "prepublishOnly": "yarn docgen",
    "prepare-dist": "rm -rf ./dist && mkdir -p dist/contracts && rsync -a -m --exclude 'ZERO' --exclude 'TestContracts' --exclude '*/*ZERO*.sol' --exclude '*/*Community*' --include '*/' --include '*.sol' --exclude '*' 'contracts/' 'dist/contracts' && cp -R LICENSE docs 'artifacts/version' ./dist && cp ./README.dist.md ./dist/README.md && cp ./package.dist.json ./dist/package.json",
    "dist-pack": "cd ./dist && yarn pack --filename ../sovryn-zero-contracts-package.tgz",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "coveralls": "cat coverage/lcov.info | coveralls"
  },
  "keywords": [
    "Sovryn",
    "Zero",
    "DeFi",
    "blockchain",
    "finance",
    "BTC",
    "bitcoin",
    "RSK",
    "rootstock",
    "solidity",
    "contracts",
    "SDK"
  ],
  "author": "Sovryn",
  "license": "GPL-3.0-only",
  "dependencies": {
    "decimal.js": "^10.2.0",
    "eth-mutants": "^0.1.1",
    "ethereumjs-util": "^7.0.9",
    "ethers": "^5.0.32",
    "solc": "^0.6.11",
    "xmlhttprequest": "^1.8.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.1",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "^3.3.0",
    "@openzeppelin/test-helpers": "^0.5.10",
    "@primitivefi/hardhat-dodoc": "^0.2.3",
    "chai-bn": "0.2.2",
    "eth-gas-reporter": "^0.2.22",
    "ganache-time-traveler": "1.0.15",
    "hardhat": "^2.1.1",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-gas-reporter": "^1.0.1",
    "npm-run-all": "^4.1.5",
    "solidity-coverage": "^0.7.16",
    "web3": "^1.3.4"
  }
}