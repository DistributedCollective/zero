{
  "name": "@sovryn-zero/contracts",
  "version": "1.0.0-early.access",
  "description": "",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "do-publish": "yarn publish dist",
    "do-pack": "yarn prepublishOnly && yarn dist-pack",
    "publish": "cd ./dist && yarn publish",
    "hardhat": "hardhat",
    "docgen": "truffle compile && solidoc2 ./ ./docs",
    "prepare": "run-s prepare:*",
    "lint": "eslint",
    "lint:fix": "yarn run lint . --fix",
    "prettier:check": "yarn prettier --check .",
    "prettier:write": "yarn prettier --write .",
    "do-prepare:format": "yarn run prettier:write && yarn run lint:fix",
    "prepare:compile": "hardhat compile",
    "prepare:set-version": "node scripts/set-version.js",
    "prepublishOnly": "run-s prepack:*",
    "prepare-dist": "rm -rf ./dist && mkdir -p dist/contracts && rsync -a -m --exclude 'ZERO' --exclude 'TestContracts' --exclude '*/*ZERO*.sol' --exclude '*/*Community*' --include '*/' --include '*.sol' --exclude '*' 'contracts/' 'dist/contracts' && cp -R README.md LICENSE docs ./dist && cp ./package.dist.json ./dist/package.json",
    "dist-pack": "cd ./dist && yarn pack --filename ../sovryn-zero-contracts-package.tgz",
    "prepack:docgen": "yarn docgen",
    "prepack:prepare-dist": "yarn prepare-dist",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "hh:fork-testnet": "yarn hardhat node --fork https://testnet.sovryn.app/rpc --no-deploy",
    "hh:fork-mainnet": "yarn hardhat node --fork https://mainnet-dev.sovryn.app/rpc --no-deploy",
    "hh:console-mainnet": "hardhat console --network rskSovrynMainnet",
    "hh:console-testnet": "hardhat console --network rskSovrynTestnet"
  },
  "keywords": [
    "sovryn",
    "zero",
    "solidity contracts",
    "zero contracts"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nomiclabs/hardhat-solhint": "^3.0.0",
    "cross-env": "^7.0.3",
    "cryptoenv": "^0.2.0",
    "decimal.js": "^10.2.0",
    "eth-mutants": "^0.1.1",
    "eth-permit": "^0.2.3",
    "ethereumjs-util": "^7.0.9",
    "hardhat": "2.13.1",
    "solc": "^0.6.11",
    "solhint": "^3.4.0",
    "solhint-plugin-prettier": "^0.0.5",
    "xmlhttprequest": "^1.8.0"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^2.0.1",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "^3.1.6",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "^3.3.0",
    "@openzeppelin/test-helpers": "^0.5.10",
    "@primitivefi/hardhat-dodoc": "^0.2.3",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "chai": "^4.3.7",
    "chai-bn": "0.2.2",
    "cryptoenv": "^0.2.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eth-gas-reporter": "^0.2.22",
    "eth-sig-util": "^3.0.1",
    "ethers": "^6.0.8",
    "ganache-time-traveler": "1.0.15",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-deploy": "^0.11.24",
    "hardhat-gas-reporter": "^1.0.9",
    "node-logs": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.5.1",
    "prettier": "^2.8.4",
    "prettier-plugin-solidity": "^1.1.2",
    "solidity-coverage": "^0.8.2",
    "tslint-config-prettier": "^1.18.0",
    "typechain": "^8.1.1",
    "typescript": "^4.9.5",
    "web3": "^1.3.4"
  }
}
