{
    "env": {
        "browser": true,
        //"commonjs": true,
        "es2021": true,
        //"mocha": true, // for test files
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "prettier" // "prettier" should be last
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "eslint-plugin-tsdoc"
    ],
    "rules": {
        "tsdoc/syntax": "warn",
        "@typescript-eslint/no-empty-interface": [
            "warn"
        ],
        "no-unused-vars": "warn",
        "no-undef": "warn"
    }
}